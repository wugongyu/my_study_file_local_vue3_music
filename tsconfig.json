{
  // 指定要继承的配置文件
  "extends": "@vue/tsconfig/tsconfig.web.json",
  // 在填写路径时 ** 表示任意目录， * 表示任意文件
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "isolatedModules": false, // 是否将每个文件转为单独的模块，默认就是false
    "baseUrl": "./", // 用于解析非绝对模块名的基本目录，相对模块不受影响
    "paths": {
      //用于设置模块名称基于baseUrl的路径映射关系
      "@/*": [
        "./src/*"
      ],
    },
    // 此配置解决 -- 类型“ImportMeta”上不存在属性“env”的问题，即import.meta.env.BASE_URL报错问题
    "types": [
      "vite/client"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json",
    }
  ]
}